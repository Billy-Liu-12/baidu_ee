{
  "name": "seq_label",
  "n_gpu": 1,
  "model_arch": {
    "type": "BertRNN",
    "args": {
      "rnn_type": "lstm",
      "bert_path": "data/pretrained_model/Bert_max-len-512",
      "hidden_dim": 256,
      "n_layers": 2,
      "bidirectional": true,
      "batch_first": true,
      "dropout": 0.5,
      "bert_train": false

    }
  },
    "model_arch_crf": {
    "type": "CRF",
    "args": {
      "batch_first": true
    }
  },
  "train_set": {
    "type": "EEBertDataset",
    "args": {
      "data_dir": "data/raw_data/",
      "file_name": "train.json",
      "bert_path": "data/pretrained_model/Bert_max-len-512",
      "use_tag": true,
      "schema_name": "event_schema.json"
    }
  },
  "valid_set": {
    "type": "EEBertDataset",
    "args": {
      "data_dir": "data/raw_data/",
      "file_name": "dev.json",
      "bert_path": "data/pretrained_model/Bert_max-len-512",
      "use_tag": true,
      "schema_name": "event_schema.json"
    }
  },
  "test1_set": {
    "type": "EEBertDataset",
    "args": {
      "data_dir": "data/raw_data/",
      "file_name": "test1.json",
      "use_tag": false,
      "schema_name": "event_schema.json"
    }
  },
  "data_loader": {
    "type": "DataLoader",
    "args": {
      "shuffle": true,
      "batch_size": 4
    }
  },
  "word_embedding": {
    "type": "load_word_embedding",
    "args": {
      "word_embedding_path": "data/word_embedding/sgns.sogou.char",
      "embedding_name": "new",
      "data_dir": "data/raw_data/",
      "train_file_name": "train.json",
      "valid_file_name": "valid.json",
      "test_file_name": "test1.json"
    }
  },

    "optimizer": {
    "type": "BertAdam",
    "args": {
      "lr": 5e-4 ,
      "warmup":0.05,
      "amsgrad": true
    }
  },
  "loss": "crossentropy_loss",
  "metrics": [
    "f1",
    "precision",
    "recall"
  ],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 50,
      "gamma": 0.1
    }
  },
  "trainer": {
    "epochs": 1000,
    "saved": "saved/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "max val_f1",
    "early_stop": 20,
    "tensorboard": true
  }
}
