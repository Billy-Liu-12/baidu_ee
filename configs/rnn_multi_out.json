{
  "name": "seq_label",
  "n_gpu": 1,
  "model_arch": {
    "type": "RNN_MultiOut",
    "args": {
      "rnn_type": "lstm",
      "hidden_dim": 256,
      "n_layers": 2,
      "bidirectional": true,
      "batch_first": true,
      "dropout": 0.5
    }
  },
  "model_arch_crf": {
    "type": "CRF",
    "args": {
      "batch_first": true
    }
  },
  "data_set": {
    "type": "EEBertDataset",
    "args": {
      "data_dir": "data/raw_data/",
      "file_name": "all_data.json",
      "valid_size": 0.2,
      "bert_path": "data/pretrained_model/chinese_wwm_ext_pytorch",
      "use_tag": true,
      "schema_name": "event_schema.json"
    }
  },

  "test1_set": {
    "type": "EEBertDataset",
    "args": {
      "data_dir": "data/raw_data/",
      "file_name": "test1.json",
      "bert_path": "data/pretrained_model/chinese_wwm_ext_pytorch",
      "use_tag": false,
      "schema_name": "event_schema.json"
    }
  },
  "data_loader": {
    "type": "DataLoader",
    "args": {
      "shuffle": false,
      "batch_size": 4
    }
  },
  "word_embedding": {
    "type": "load_word_embedding",
    "args": {
      "word_embedding_path": "data/word_embedding/sgns.sogou.char",
      "embedding_name": "new",
      "data_dir": "data/raw_data/",
      "train_file_name": "train.json",
      "valid_file_name": "valid.json",
      "test_file_name": "test1.json"
    }
  },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
  "loss": "crossentropy_loss",
  "metrics": [
    "f1",
    "precision",
    "recall"
  ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
  "trainer": {
    "epochs": 200,
    "saved": "saved/",
    "save_period": 1,
    "verbosity": 1,
    "monitor": "max val_f1",
    "early_stop": 7,
    "tensorboard": true
  }
}
