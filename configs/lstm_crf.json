{
  "name": "seq_label",
  "n_gpu": 1,
  "model_arch": {
    "type": "RnnModel",
    "args": {
      "rnn_type": "lstm",
      "hidden_dim": 256,
      "n_layers": 1,
      "bidirectional": true,
      "dropout": 0.5,
      "batch_first": true
    }
  },
  "train_set": {
    "type": "EEDataset",
    "args": {
      "data_dir": "data/raw_data/",
      "file_name": "train.json",
      "use_tag": true,
      "schema_name": "event_schema.json"
    }
  },
  "valid_set": {
    "type": "EEDataset",
    "args": {
      "data_dir": "data/raw_data/",
      "file_name": "dev.json",
      "use_tag": true,
      "schema_name": "event_schema.json"
    }
  },
  "test1_set": {
    "type": "EEDataset",
    "args": {
      "data_dir": "data/raw_data/",
      "file_name": "test1.json",
      "use_tag": false,
      "schema_name": "event_schema.json"
    }
  },
  "data_loader": {
    "type": "DataLoader",
    "args": {
      "shuffle": true,
      "batch_size": 16
    }
  },
  "word_embedding": {
    "type": "load_word_embedding",
    "args": {
      "word_embedding_path": "data/word_embedding/sgns.sogou.char",
      "embedding_name": "new",
      "data_dir": "data/raw_data/",
      "train_file_name":"train.json",
      "valid_file_name": "valid.json",
      "test_file_name": "test1.json"
    }
  },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
  "loss": "crossentropy_loss",
  "metrics": [
    "f1",
    "precision",
    "recall"
  ],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 50,
      "gamma": 0.1
    }
  },
  "trainer": {
    "epochs": 300,
    "saved": "saved/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "min val_f1",
    "early_stop": 0,
    "tensorboard": true
  }
}
