{
  "name": "seq_label",
  "n_gpu": 1,
  "model_arch": {
    "type": "Bert",
    "args": {
      "bert_path": "data/pretrained_model/chinese_wwm_ext_pytorch",
      "bert_train": true
    }
  },
  "model_arch_crf": {
    "type": "CRF",
    "args": {
      "batch_first": true
    }
  },
  "train_set": {
    "type": "EEBertDataset",
    "args": {
      "data_dir": "data/raw_data/",
      "file_name": "train.json",
      "bert_path": "data/pretrained_model/chinese_wwm_ext_pytorch",
      "use_tag": true,
      "schema_name": "event_schema.json"
    }
  },
  "valid_set": {
    "type": "EEBertDataset",
    "args": {
      "data_dir": "data/raw_data/",
      "file_name": "dev.json",
      "bert_path": "data/pretrained_model/chinese_wwm_ext_pytorch",
      "use_tag": true,
      "schema_name": "event_schema.json"
    }
  },
  "test1_set": {
    "type": "EEBertDataset",
    "args": {
      "data_dir": "data/raw_data/",
      "file_name": "test1.json",
      "bert_path": "data/pretrained_model/chinese_wwm_ext_pytorch",
      "use_tag": false,
      "schema_name": "event_schema.json"
    }
  },
  "data_loader": {
    "type": "DataLoader",
    "args": {
      "shuffle": true,
      "batch_size": 4
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {

    }
  },
  "loss": "crossentropy_loss",
  "metrics": [
    "f1",
    "precision",
    "recall"
  ],
  "lr_scheduler": {
    "type": "get_linear_schedule_with_warmup",
    "args": {
      "num_warmup_steps": 5
    }
  },
  "trainer": {
    "epochs": 1000,
    "saved": "saved/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "max val_f1",
    "early_stop": 20,
    "tensorboard": true
  }
}
